---
import IconHash from "@/assets/icons/IconHash.svg";

export interface Props {
  tag: string;
  tagName: string;
  size?: "sm" | "lg";
}

const { tag, tagName, size = "sm" } = Astro.props;
---

<li
  class:list={[
    "group inline-block group-hover:cursor-pointer",
    size === "sm" ? "my-1 underline-offset-4" : "mx-1 my-3 underline-offset-8",
  ]}
>
  <a
    href={`/tags/${tag}/`}
    transition:name={tag}
    class:list={[
      "relative pe-2 text-lg group-hover:-top-0.5 group-hover:text-accent focus-visible:p-1 focus-visible:no-underline bg-muted/20 backdrop-blur-sm px-3 py-1 rounded-full border border-muted/30 hover:border-accent/50 hover:bg-accent/10 transition-all duration-200 flex items-center",
      { "text-sm": size === "sm" },
    ]}
  >
    <IconHash
      class:list={[
        "inline-block opacity-80",
        { "size-3": size === "sm" },
        { "size-5": size === "lg" },
      ]}
    />
    <span class="ml-1">{tagName}</span>
  </a>
</li>
