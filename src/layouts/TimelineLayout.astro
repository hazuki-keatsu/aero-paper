---
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Breadcrumb from "@/components/Breadcrumb.astro";
import PageContainer from "@/components/PageContainer.astro";
import Layout from "./Layout.astro";
import { SITE } from "@/config";
import "@/styles/timeline-block.css";

export interface Props {
  frontmatter: {
    title: string;
    description?: string;
  };
}

const { frontmatter } = Astro.props;
---

<Layout title={`${frontmatter.title} | ${SITE.title}`}>
  <PageContainer>
    <Header />
    <Breadcrumb />
    <main
      id="main-content"
      class="mx-auto max-w-app px-0 transition-all duration-300 sm:px-4"
    >
      <section
        id="timeline"
        class="content-card app-prose mt-6 mb-12 max-w-app rounded-none px-4 py-8 sm:rounded-lg sm:px-8 prose-img:border-0"
      >
        <h1
          class="mb-6 text-2xl tracking-wider sm:text-3xl"
        >
          {frontmatter.title}
        </h1>

        {
          frontmatter.description && (
            <p class="mb-6 mt-2 italic">
              {frontmatter.description}
            </p>
          )
        }
        <slot />
      </section>
    </main>
    <Footer />
  </PageContainer>
</Layout>
