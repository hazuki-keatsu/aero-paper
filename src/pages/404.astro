---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import PageContainer from "@/components/PageContainer.astro";
import LinkButton from "@/components/LinkButton.astro";
import { SITE } from "@/config";
---

<Layout title={`404 Not Found | ${SITE.title}`}>
  <PageContainer>
    <Header />

    <main
      id="main-content"
      class="mx-auto max-w-app px-4 flex flex-1 items-center justify-center my-6"
    >
      <div class="content-card px-8 py-16 w-full flex flex-col items-center justify-center">
        <h1 class="text-9xl font-bold text-accent">404</h1>
        <span aria-hidden="true">¯\_(ツ)_/¯</span>
        <p class="mt-4 text-2xl sm:text-3xl">页面没有找到</p>
        <LinkButton
          href="/"
          class="my-6 text-lg underline decoration-dashed underline-offset-8"
        >
          回到主页
        </LinkButton>
      </div>
    </main>

    <Footer/>
  </PageContainer>
</Layout>
